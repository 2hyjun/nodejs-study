doctype html
html
    head
        meta(charset="utf-8")
        title Product
        h1 Product List
    body
        fieldset
            each product in products
                -var rid = encodeURIComponent(product['@rid']);
                li= product.title + "\t\t"
                    a(href='/product?addrid=' + rid) add
                    
                    
        h3
            a(href='/cart') cart       

                